<!DOCTYPE html>
<html lang="en">

{{> head }}

<body>
    {{> navbar }}
    <header class="container mt-3">
        <h1>Renombrar</h1>
    </header>
    <section class="container mt-3">
        <div>
            <form action="/archivos/renombrar" method="get">
                <div class="mb-3">
                    <label for="txtNombreArchivo" class="form-label">Nombre Archivo</label>
                    <input type="text" class="form-control" id="txtNombreArchivo" name="txtNombreArchivo">
                </div>
                <div class="mb-3"></div>
                    <label for="txtNombreNuevoArchivo" class="form-label">Nombre Nuevo Archivo</label>
                    <input type="text" class="form-control" id="txtNombreNuevoArchivo" name="txtNombreNuevoArchivo">
                </div>
                <button type="submit" class="btn btn-primary">Renombrar Archivo</button>
            </form>
        </div>
    </section>
    {{> scripts }}
</body>

</html>